<div class="container">
	<%= link_to "Back", :back %>
	<div class="form-container">	
		<h1>Add a New Journal</h1>
		
		<%= form_for [@user, @journal] do |f| %>
			<div class="form-group">
				<%= f.text_field :title, placeholder: "Journal title", class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.text_area :description, placeholder: "What will you record in this journal?", class: "form-control" %>
			</div>
			<%= f.hidden_field :user_id, value: @user.id %>
			<%= f.submit "Create New Journal", class: "btn btn-primary btn-xs" %>
			<%= link_to "Cancel", user_path(@user.id), class: "btn btn-primary btn-xs" %>
		<% end %>
	</div>
</div>
