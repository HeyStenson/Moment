<div class="container">
	<%= link_to "Back", :back %>
	<h1><%= @journal.title %> - <small><%= @journal.description %></small></h1>
	<small>Created <%= time_ago_in_words(relative_time(@journal)) %> ago</small>
	<br>
	<%= link_to "Edit Journal", edit_user_journal_path, method: :get %> | 
	<%= link_to "Delete Journal", user_journal_path, method: :delete %>
	
	<div>
		<div>
			<%= link_to "Add a New Moment", new_user_journal_moment_path(@user.id, @journal.id), method: :get %>
		</div>
		<div class="row">
		<% @journal.moments.reverse_each do |moment| %>

			
				<div class="col-sm-6 col-md-4">
					<div class="thumbnail moment-card">	
						<%= image_tag(moment.photo, class: "img-rounded") %>
						<div class="caption">		
							<h3><%= moment.title %></h3>
							<small>Created <%= time_ago_in_words(relative_time(moment)) %> ago</small>
						<p class="moment-text"><%= moment.description %></p>
						<%= link_to "Edit Moment", edit_user_journal_moment_path(@user.id, @journal.id, moment.id), method: :get, class: "small" %> | 
						<%= link_to "Delete Moment", user_journal_moment_path(@user.id, @journal.id, moment.id), method: :delete, class: "small" %>
						</div>
					</div>
				</div>
			

		<% end %>
		</div>
	</div>
</div>
