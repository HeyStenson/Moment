<div class="container">
	<% if @moment.public %>

		<% if current_user != @user %>
			<h1 class="text-center"><%= @user.first_name %> <%= @user.last_name %> has chosen to share this moment with you! Learn more about Moment.</h1>
		<% else %>
			<h2 class="text-center">Hi, <%= @user.first_name %>! You've chosen to share this moment with others.</h2>
		<% end %>
		<div class="row">	
			<div class="col-sm-6 col-md-4"></div>
			<div class="col-sm-6 col-md-4">		
				<div class="thumbnail moment-card">				
					<% if @moment.photo != nil && @moment.photo != "" %>
						<%= image_tag(@moment.photo, class: "img-rounded") %>
					<% end %>
					<div class="caption">
						<h3 class="moment-title"><%= @moment.title %></h3>
						<small><em>Created <%= time_ago_in_words(relative_time(@moment)) %> ago</em></small>
						<p class="moment-text"><%= @moment.description %></p>
				</div>		
				</div>
			</div>	
		</div>

		<% if current_user == @user %>
			<div id="fb-root"></div>
			<script>(function(d, s, id) {
			  var js, fjs = d.getElementsByTagName(s)[0];
			  if (d.getElementById(id)) return;
			  js = d.createElement(s); js.id = id;
			  js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.5";
			  fjs.parentNode.insertBefore(js, fjs);
			}(document, 'script', 'facebook-jssdk'));</script>	
				<h3 class="text-center">Send this link on Facebook!</h3>
			    <div class="fb-send" data-href="http://heystenson.com"></div>
		<% end %>

	<% else %>
		<h1 class="text-center">Thank you for your interest in Moment! Learn more about us.</h1>
	<% end %>
</div>
