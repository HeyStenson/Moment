<div class="container">
	<h1>Add a New Moment</h1>
	
	<%= form_for [@user, @journal, @moment] do |f| %>
		<div class="form-group">
			<%= f.text_field :title, placeholder: "Moment title", class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.text_field :description, placeholder: "Start a memory", class: "form-control" %>
		</div>
		<%= f.hidden_field :user_id, value: @user.id %>
		<%= f.hidden_field :journal_id, value: @journal.id %>
		<div>
			<%= f.submit "Create New Moment", class: "btn btn-primary" %>
		</div>
	<% end %>

</div>
