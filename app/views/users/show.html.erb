<div class="container">
	<h1>Your Journals</h1>
	<p>First Name: <%= @user.first_name %></p>
	<p>Last Name: <%= @user.last_name %></p>
	<div>
		<%= link_to "Add a new journal!", new_user_journal_path(@user.id) %>
	</div>

	<div> Your Journals: <br>
		<% @journals.each do |journal| %>
			<%= link_to journal.title, user_journal_path(@user.id, journal.id) %>
			<br>
		<% end %>

	</div>

	<%= link_to('Log Out', destroy_user_session_path, :method => :delete) %>
</div>
